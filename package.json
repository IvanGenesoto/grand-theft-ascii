{
  "name": "anarch-city",
  "version": "1.0.0",
  "description": "A massively multiplayer persistent online world for people who want to experience a simulated anarchic society.",
  "main": "build/server/index.js",
  "dependencies": {
    "express": "^4.17.1",
    "performance-now": "^2.1.0",
    "socket.io": "^2.3.0",
    "esm": "^3.2.25",
    "esmify": "^2.1.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-object-entries-and-values-to-object-keys": "^1.0.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babelify": "^10.0.0",
    "browserify": "^16.5.1",
    "eslint": "^7.0.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-standard": "^4.0.1",
    "htmlhint": "^0.13.0",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "stylelint": "^13.5.0",
    "stylelint-config-standard": "^20.0.0",
    "watchify": "^3.11.1"
  },
  "scripts": {
    "build": "babel src -vd -d build --copy-files",
    "bundle": "browserify -p esmify build/client/index.js -v --transform babelify -o build/server/public/main.js",
    "prestart": "npm run build && npm run bundle",
    "start": "node -r esm .",
    "watch:server": "nodemon .",
    "watch:client": "watchify build/client/index.js -vd --transform babelify -o build/server/public/main.js",
    "watch": "npm run prestart && run-p watch:client watch:server",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IvanGenesoto/anarch-city.git"
  },
  "bugs": {
    "url": "https://github.com/IvanGenesoto/anarch-city/issues"
  },
  "homepage": "https://github.com/IvanGenesoto/anarch-city#readme"
}
